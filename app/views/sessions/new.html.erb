
<h1> Login Page </h1>
<%= form_for(:user, url: sessions_path) do |f| %> <!-- sessions_path causes a POST to the sessions#create URI to happen when submit button is pressed -->
<div class = "field">
	<%= f.label :username %><br/>
	<%= f.text_field :username %>
</div>

<div class = "field">
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
</div>

<div class = "action">
	<%= f.submit "Login" %>
</div>
<% end %>

